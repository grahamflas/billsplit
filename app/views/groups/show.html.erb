<div class="flex flex-col gap-4">
  <h1 class="text-4xl"><%= @group.name %></h1>

  <div>
    <h2 class="text-2xl">Group members</h2>
    <ul>
      <% @group.users.each do |user| %>
        <li><%= user.email %></li>
      <% end %>
    </ul>
  </div>

  <h2 class="text-2xl mb-4">Expenses</h2>

  <div class="flex flex-col gap-4">
    <%= render @expenses %>
  </div>
</div>

