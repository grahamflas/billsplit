<div
  id="group-<%= group.id %>"
  class="flex flex-col items-center justify-start gap-6 bg-white shadow rounded-lg w-full sm:w-1/2 lg:w-1/3 p-6"
>
  <h1 class="text-4xl"><%= group.name %></h1>

  <ul>
    <% group.users.each do |user| %>
      <li><%= user.email %></li>
    <% end %>
  </ul>

  <%= link_to 'View group',
    group_path(group),
    class: "text-indigo-500"
  %>
</div>

