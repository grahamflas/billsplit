<div class="flex justify-center items-start px-6 py-20">
  <div class="grid grid-cols-1 md:grid-cols-2 gap-12 max-w-6xl">
    <%= render partial: 'shared/about_billsplit' %>

    <div class="flex flex-col bg-white shadow rounded-lg p-8">
      <h2 class="text-4xl mb-6">Sign up</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "users/shared/error_messages", resource: resource %>

        <div class="field mb-6">
          <%= f.text_field :first_name,
            autofocus: true,
            autocomplete: "first_name",
            class: "border border-indigo-50 rounded-md bg-indigo-50 focus:outline-indigo-400 px-3 py-2 w-full"
          %>

          <%= f.label :first_name, class: "text-gray-500" %><br />
        </div>

        <div class="field mb-6">
          <%= f.text_field :last_name,
            autocomplete: "last_name",
            class: "border border-indigo-50 rounded-md bg-indigo-50 focus:outline-indigo-400 px-3 py-2 w-full"
          %>

          <%= f.label :last_name, class: "text-gray-500" %><br />
        </div>

        <div class="field mb-6">
          <%= f.email_field :email,
            autocomplete: "email",
            class: "border border-indigo-50 rounded-md bg-indigo-50 focus:outline-indigo-400 px-3 py-2 w-full"
          %>

          <%= f.label :email, class: "text-gray-500" %><br />
        </div>

        <div class="field mb-6">
          <%= f.password_field :password,
            autocomplete: "new-password",
            class: "border border-indigo-50 rounded-md bg-indigo-50 focus:outline-indigo-400 px-3 py-2 w-full"
          %>

          <%= f.label :password, class: "text-gray-500" %>

          <% if @minimum_password_length %>
          <em class="text-gray-500">(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
        </div>

        <div class="field mb-6">
          <%= f.password_field :password_confirmation,
            autocomplete: "new-password",
            class: "border border-indigo-50 rounded-md bg-indigo-50 focus:outline-indigo-400 px-3 py-2 w-full"
          %>

          <%= f.label :password_confirmation, class: "text-gray-500" %><br />
        </div>

        <div class="actions">
          <%= f.submit "Sign up",
            class: "w-full bg-indigo-500 hover:bg-indigo-600 focus:outline-indigo-900 rounded-md text-white py-2 mb-6 cursor:pointer"
          %>
        </div>
      <% end %>

      <div class="mb-6 text-gray-500">
        Aready have an account?
        <%= link_to "Sign in",
          new_session_path(resource_name),
          class: "text-indigo-400"
        %> now
      </div>


      <%= render "users/shared/links" %>
    </div>
  </div>
</div>
