<div class="flex justify-center items-start px-6 py-20">
  <div class="flex flex-col bg-white shadow rounded-lg p-8">
    <h2 class="text-4xl mb-6">Forgot your password?</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>

      <div class="field mb-6">
        <%= f.email_field :email,
          autofocus: true,
          autocomplete: "email",
          class: "border border-indigo-50 rounded-md bg-indigo-50 focus:outline-indigo-400 px-3 py-2 w-full"
        %>

        <%= f.label :email, class: "text-gray-500" %><br />
      </div>

      <div class="actions">
        <%= f.submit "Send me reset password instructions",
          class: "w-full bg-indigo-500 hover:bg-indigo-600 focus:outline-indigo-900 rounded-md text-white text-sm sm:text-base py-2 mb-6 cursor:pointer"
        %>
      </div>
    <% end %>

   <div class="mb-4 text-gray-500 text-sm sm:text-base">
      Already have an account?
      <%= link_to "Sign in",
        new_session_path(resource_name),
        class: "text-indigo-400"
      %> now
    </div>

    <div class="text-gray-500 text-sm sm:text-base">
      Don't have an account?
      <%= link_to "Sign up",
        new_registration_path(resource_name),
        class: "text-indigo-400"
      %> now
    </div>

  </div>
</div>
