{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "jsx": "react-jsx",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "incremental": true,
    "types": ["vite/client"]
  },
  "include": [
    "app/javascript/**/*.ts",
    "app/javascript/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "tmp",
    "log",
    "public",
    "vendor"
  ]
}
